{
    "files": [
        "examples/*.ts",
        "examples/**/*.ts",
        "src/*.ts",
        "src/**/*.ts"
    ],
    "include": [
        "examples/**/*.d.ts",
        "src/**/*.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./out-dir",
        "target": "ES5",
        "module": "AMD",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "gulp-typescript": ["node_modules/gulp-typescript/release/main"] 
        }
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}